# EditorConfig is awesome: http://EditorConfig.org

# This is the top-most EditorConfig file
root = true

# For every files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# For MarkDown files
[*.md]
insert_final_newline = false
