{
    "name": "lumboilerplate",
    "version": "1.0.0",
    "description": "Default boilerplate for new project generation",
    "keywords": [
        "lumapps",
        "angular",
        "boilerplate",
        "typescript",
        "sass",
        "webpack"
    ],
    "homepage": "https://github.com/lumapps/boilerplate/",
    "config": {
        "commitizen": {
            "path": "./node_modules/lumapps-conventional-changelog"
        },
        "husky": {
            "flags": "--silent"
        },
        "validate-commit-msg": {
            "types": "lumapps-conventional-commit-types",
            "warnOnFail": false,
            "maxSubjectLength": 100,
            "subjectPattern": "^[a-z0-9].+[^.]$",
            "subjectPatternErrorMsg": "Commit subject is not valid. It must start with a lowercase letter or a number, be at least one word long and not end with a dot.",
            "helpMessage": "\nHere is the format for valid commit messages: \n<type>(<scope>): <subject>\n<BLANK LINE>\n<body>\n<BLANK LINE>\n<footer>\n\n\nThe scope must be in kebab-case\n\nIf your commit message starts with 'WIP', then no commit validation will be enforced."
        }
    },
    "scripts": {
        "co": "npm -s run commit",
        "commit": "git-cz",
        "cz": "npm -s run commit",

        "precommit": "./.pre-commit",
        "commitmsg": "npm -s run validate-commit",
        "prepush": "./.pre-push",

        "help": "npm -s run tasks",
        "task": "gulp",
        "tasks": "npm -s run task -- --tasks",

        "clean": "npm -s run clean:dist",
        "clean:all": "npm -s run task -- clean:all",
        "clean:aot": "npm -s run task -- clean:aot",
        "clean:dist": "npm -s run task -- clean:dist",
        "clean:docs": "npm -s run task -- clean:docs",
        "clean:docs:client": "npm -s run task -- clean:docs:client",
        "clean:docs:config": "npm -s run task -- clean:docs:config",
        "clean:e2e:report": "npm -s run task -- clean:e2e:report",
        "clean:maps": "npm -s run task clean:maps",
        "clean:misc": "npm -s run task clean:misc",
        "clean:npm": "npm -s run clean:packages",
        "clean:packages": "bash -c \"(gulp --version &> /dev/null) && npm -s run task -- clean:packages || npm -s run clean:packages:core\"",
        "clean:packages:core": "rm -Rf -- node_modules; rm -Rf -- yarn.lock",
        "clean:packages:yarn:npm": "bash -c \"(yarn --version &> /dev/null) && ((rm -Rf yarn.lock; yarn cache clean) || npm -s cache clean)\"",
        "clean:project": "npm -s run task -- clean:project",
        "clean:reports": "npm -s run clean:tests:reports",
        "clean:tests": "npm -s run clean:tests:reports",
        "clean:tests:reports": "npm -s run task -- clean:tests:reports",
        "clean:unit:report": "npm -s run task -- clean:unit:report",

        "build": "npm -s run build:prod",
        "build:fast": "npm -s run build:prod:fast",
        "build:dev": "npm -s run task -- build:dev",
        "build:dev:fast": "npm -s run task -- build:dev:fast",
        "build:prod": "npm -s run task -- build:prod",
        "build:prod:fast": "npm -s run task -- build:prod:fast",
        "build:dist": "npm -s run task -- build:prod",
        "build:dist:fast": "npm -s run task -- build:prod:fast",
        "build:aot": "npm -s run task -- build:aot",
        "build:aot:fast": "npm -s run task -- build:aot:fast",
        "dev": "npm -s run build:dev",
        "dev:fast": "npm -s run build:dev:fast",
        "dist": "npm -s run build:prod",
        "dist:fast": "npm -s run build:prod:fast",
        "prod": "npm -s run build:prod",
        "prod:fast": "npm -s run build:prod:fast",

        "docs": "npm -s run task -- docs",
        "docs:client": "npm -s run task -- docs:client",
        "docs:config": "npm -s run task -- docs:config",
        "doc": "npm -s run docs",
        "doc:client": "npm -s run docs:client",
        "doc:config": "npm -s run docs:config",

        "e2e": "npm -s run task -- e2e:headless",
        "e2e:visible": "npm -s run task -- e2e",
        "e2e:debug": "npm -s run task -- e2e:debug",
        "e2e:debug:fast": "npm -s run task -- e2e:debug:fast",
        "e2e:fast": "npm -s run task -- e2e:fast",
        "e2e:headless": "npm -s run task -- e2e:headless",
        "e2e:headless:fast": "npm -s run task -- e2e:headless:fast",

        "lint": "npm -s run lint:src",
        "lint:all": "npm -s run lint:config; npm -s run lint:src; npm -s run lint:tests",
        "lint:config": "npm -s run task -- lint:config",
        "lint:config:js": "npm -s run task -- lint:config:js",
        "lint:config:json": "npm -s run task -- lint:config:json",
        "lint:src": "npm -s run task -- lint:src",
        "lint:src:ts": "npm -s run task -- lint:src:ts",
        "lint:src:js": "npm -s run task -- lint:src:js",
        "lint:src:scss": "npm -s run task -- lint:src:scss",
        "lint:tests": "npm -s run task -- lint:tests",
        "lint:tests:e2e": "npm -s run task -- lint:tests:e2e",
        "lint:tests:unit": "npm -s run task -- lint:tests:unit",

        "test": "npm -s run unit:headless",
        "test:visible": "npm -s run unit",
        "test:headless": "npm -s run unit:headless",
        "test:debug": "npm -s run unit:debug",
        "test:live": "npm -s run unit:live",
        "test:live:headless": "npm -s run unit:live:headless",
        "test:live:debug": "npm -s run unit:live:debug",

        "tests": "npm -s run task -- tests:headless",
        "tests:visible": "npm -s run task -- tests",
        "tests:fast": "npm -s run task -- tests:fast",
        "tests:debug": "npm -s run task -- tests:debug",
        "tests:debug:fast": "npm -s run task -- tests:debug:fast",
        "tests:headless": "npm -s run task -- tests:headless",
        "tests:headless:fast": "npm -s run task -- tests:headless:fast",

        "unit": "npm -s run task -- unit",
        "unit:headless": "npm -s run task -- unit:headless",
        "unit:debug": "npm -s run task -- unit:debug",
        "unit:live": "npm -s run task -- unit:live",
        "unit:live:headless": "npm -s run task -- unit:live:headless",
        "unit:live:debug": "npm -s run task -- unit:live:debug",

        "check:prerequisites": "bash -c \"(gulp --version &> /dev/null) && npm -s run task -- check:prerequisites || npm -s run check:prerequisites:core\"",
        "check:prerequisites:core": "bash -c \"./pre-requisites.sh\"",

        "preinit": "npm -s run check:prerequisites:core",
        "init": "bash ./init.sh",

        "setup:git-hooks": "node node_modules/husky/bin/uninstall.js && node node_modules/husky/bin/install.js",

        "setup": "bash -c \"(gulp --version &> /dev/null) && npm run -s task -- setup || npm -s run setup:core\"",
        "setup:no-check": "bash -c \"(gulp --version &> /dev/null) && npm run -s task -- setup:no-check || npm -s run setup:core:no-check\"",
        "setup:core": "npm -s run clean:packages && bash -c \"./pre-requisites.sh\" && npm -s run setup:yarn:npm && npm -s run task -- clean:project",
        "setup:core:no-check": "npm -s run clean:packages && npm -s run setup:yarn:npm && npm -s run task -- clean:project",
        "setup:yarn:npm": "bash -c \"(yarn --version &> /dev/null) && npm -s run setup:yarn || npm -s run setup:npm\"",
        "setup:npm": "npm -s install",
        "setup:yarn": "yarn install",

        "setup:fast": "bash -c \"(gulp --version &> /dev/null) && npm -s run task -- setup:fast || npm -s run setup:core\"",
        "setup:fast:no-check": "bash -c \"(gulp --version &> /dev/null) && npm -s run task -- setup:fast:no-check || npm -s run setup:core:no-check\"",
        "setup:fast:yarn:npm": "bash -c \"(yarn --version &> /dev/null) && npm -s run setup:fast:yarn || npm -s run setup:fast:npm\"",
        "setup:fast:npm": "npm -s run setup:update:npm",
        "setup:fast:yarn": "npm -s run setup:update:yarn",

        "setup:update": "npm -s run task -- setup:update",
        "setup:update:yarn:npm": "bash -c \"(yarn --version &> /dev/null) && npm -s run setup:update:yarn || npm -s run setup:update:npm\"",
        "setup:update:npm": "npm -s prune && npm -s install && npm -s update",
        "setup:update:yarn": "yarn install && yarn upgrade",
        "update": "npm -s run setup:update",
        "update:npm": "npm -s run setup:update:npm",
        "update:yarn": "npm -s run setup:update:yarn",

        "default": "npm -s run start",
        "start": "npm -s run serve:live",

        "release:help": "./release.sh -h",
        "release:fix": "./release.sh",
        "release:candidate": "./release.sh -c",
        "release:golden": "./release.sh -g",
        "release:final": "./release.sh -f",

        "live": "npm -s run serve:live",
        "run": "npm -s run serve:live",
        "serve": "npm -s run task -- serve",
        "serve:live": "npm -s run task -- serve:live",
        "serve:dev": "npm -s run task -- serve:dev:open",
        "serve:dev:silent": "npm -s run task -- serve:dev",
        "serve:dev:fast": "npm -s run task -- serve:dev:fast:open",
        "serve:dev:fast:silent": "npm -s run task -- serve:dev:fast",
        "serve:dist": "npm -s run serve:prod",
        "serve:dist:silent": "npm -s run serve:prod:silent",
        "serve:dist:fast": "npm -s run serve:prod:fast",
        "serve:dist:fast:silent": "npm -s run serve:prod:fast:silent",
        "serve:prod": "npm -s run task -- serve:prod:open",
        "serve:prod:silent": "npm -s run task -- serve:prod",
        "serve:prod:fast": "npm -s run task -- serve:prod:fast:open",
        "serve:prod:fast:silent": "npm -s run task -- serve:prod:fast",

        "scaffold": "npm -s run task -- scaffold",
        "scaffold:help": "npm -s run task -- scaffold:help",
        "scaffold:component": "npm -s run task -- scaffold:component",
        "scaffold:component:core": "npm -s run task -- scaffold:component:core",
        "scaffold:module": "npm -s run task -- scaffold:module",
        "scaffold:module:core": "npm -s run task -- scaffold:module:core",


