        "run-serie": "run-s",
        "sass-lint": "sass-lint",
        "tsc": "tsc",
        "tslint": "tslint",
        "typedoc": "typedoc",
        "validate-commit": "validate-commit-msg",
        "webpack": "webpack",
        "webpack-dashboard": "webpack-dashboard",
        "webpack-dev-server": "webpack-dev-server",

        "karma": "karma",
        "karma:headless": "xvfb-run --auto-servernum karma",
        "protractor": "protractor",
        "protractor:debug": "protractor --elementExplorer",
        "protractor:headless": "xvfb-run --auto-servernum protractor",
        "webdriver-manager": "webdriver-manager",
        "webdriver:start": "npm -s run webdriver-manager -- start 2>&1",
        "webdriver:update": "npm -s run webdriver-manager -- update --standalone 2>&1"
